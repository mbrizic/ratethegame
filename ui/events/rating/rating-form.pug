append style
	include rating-form.css

append scripts
	include rating-form.js

if user
	if hasUserAlreadyRated
		form(action=`/events/${event.id}/unvote`, method='POST')
			input(type='hidden', name='eventId', value=event.id)
			input(type='hidden', name='userId', value=user.id)
			button(type='submit') Remove your vote
	else
		form(action=`/events/${event.id}/vote`, method='POST')
			input(type='hidden', name='wouldRecommend', value="true")
			input(type='hidden', name='eventId', value=event.id)
			input(type='hidden', name='userId', value=user.id)
			button(type='submit') Would recommend ğŸ‘

		form(action=`/events/${event.id}/vote`, method='POST')
			input(type='hidden', name='wouldRecommend', value="false")
			input(type='hidden', name='eventId', value=event.id)
			input(type='hidden', name='userId', value=user.id)
			button(type='submit') Would not recommend ğŸ‘
else
	p 
		a(href="/login") Log in
		span  to post your rating