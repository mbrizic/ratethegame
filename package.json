{
	"name": "ratethegame",
	"version": "0.0.0",
	"scripts": {
		"start": "cross-env NODE_ENV=production ts-node --transpile-only main.ts",
		"dev": "cross-env NODE_ENV=development nodemon --watch . --delay 1 --exec 'ts-node' main.ts",
		"test": "jest --forceExit --detectOpenHandles",
		"db-migrate": "cross-env NODE_ENV=production ts-node --transpile-only database/db-migrate.ts",
		"db-purge": "cross-env NODE_ENV=production ts-node --transpile-only database/db-purge.ts",
		"lint": "tslint -p tsconfig.json -c tslint.json"
	},
	"dependencies": {
		"bcrypt": "^5.0.1",
		"cookie-parser": "^1.4.5",
		"cors": "^2.8.5",
		"cron": "^1.8.2",
		"cross-env": "^7.0.3",
		"dotenv": "^10.0.0",
		"express": "^4.17.1",
		"helmet": "^4.6.0",
		"hpp": "^0.2.3",
		"jest": "^27.3.0",
		"jsonwebtoken": "^8.5.1",
		"morgan": "^1.10.0",
		"pg": "^8.7.1",
		"pg-hstore": "^2.3.4",
		"sequelize": "^6.7.0",
		"sequelize-auto": "^0.8.4",
		"sequelize-typescript": "^2.1.1",
		"ts-jest": "^27.0.7",
		"ts-node": "^10.3.0",
		"typescript": "^4.4.4"
	},
	"devDependencies": {
		"@types/bcrypt": "^5.0.0",
		"@types/cookie-parser": "^1.4.2",
		"@types/cors": "^2.8.12",
		"@types/cron": "^1.7.3",
		"@types/dotenv": "^8.2.0",
		"@types/express": "^4.17.13",
		"@types/helmet": "0.0.48",
		"@types/hpp": "^0.2.2",
		"@types/jest": "^27.0.2",
		"@types/jsonwebtoken": "^8.5.5",
		"@types/morgan": "^1.9.3",
		"@types/node": "^16.11.1",
		"@types/supertest": "^2.0.11",
		"nodemon": "^2.0.13",
		"supertest": "^6.1.6",
		"tslint": "^6.1.2",
		"tslint-config-airbnb": "^5.11.2"
	},
	"jest": {
		"preset": "ts-jest",
		"testEnvironment": "node",
		"transform": {
			"node_modules/variables/.+\\.(j|t)sx?$": "ts-jest"
		},
		"transformIgnorePatterns": [
			"node_modules/(?!variables/.*)"
		]
	}
}
