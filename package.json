{
	"name": "ratethegame",
	"version": "0.0.0",
	"scripts": {
		"start": "cross-env NODE_ENV=production ts-node --transpile-only main.ts",
		"dev": "cross-env NODE_ENV=development nodemon --watch . --delay 1 --exec 'ts-node' main.ts",
		"test": "jest --forceExit --detectOpenHandles",
		"db-migrate": "cross-env NODE_ENV=production ts-node --transpile-only database/db-migrate.ts",
		"db-purge": "cross-env NODE_ENV=production ts-node --transpile-only database/db-purge.ts",
		"lint": "tslint -p tsconfig.json -c tslint.json"
	},
	"dependencies": {
		"@types/form-data": "^2.5.0",
		"bcrypt": "^5.0.0",
		"class-transformer": ">=0.3.1",
		"class-validator": "^0.12.2",
		"cookie-parser": "^1.4.5",
		"cors": "^2.8.5",
		"cross-env": "^7.0.2",
		"dotenv": "^8.2.0",
		"express": "^4.17.1",
		"helmet": "^3.23.1",
		"hpp": "^0.2.3",
		"jest": "^26.0.1",
		"jsonwebtoken": "^8.5.1",
		"morgan": "^1.10.0",
		"pg": "^8.5.1",
		"pg-hstore": "^2.3.3",
		"postgres-migrations": "^5.1.1",
		"sequelize": "^6.6.2",
		"sequelize-auto": "^0.8.2",
		"sequelize-typescript": "^1.1.0",
		"swagger-jsdoc": "^4.0.0",
		"swagger-ui-express": "^4.1.4",
		"ts-jest": "^26.1.0",
		"ts-node": "^8.10.2",
		"typescript": "^4.2.3"
	},
	"devDependencies": {
		"@types/bcrypt": "^3.0.0",
		"@types/cookie-parser": "^1.4.2",
		"@types/cors": "^2.8.6",
		"@types/dotenv": "^8.2.0",
		"@types/express": "^4.17.6",
		"@types/helmet": "0.0.47",
		"@types/hpp": "^0.2.1",
		"@types/jest": "^26.0.0",
		"@types/jsonwebtoken": "^8.5.0",
		"@types/morgan": "^1.9.1",
		"@types/node": "^14.0.13",
		"@types/supertest": "^2.0.9",
		"nodemon": "^2.0.4",
		"supertest": "^4.0.2",
		"tslint": "^6.1.2",
		"tslint-config-airbnb": "^5.11.2"
	},
	"jest": {
		"preset": "ts-jest",
		"testEnvironment": "node",
		"transform": {
			"node_modules/variables/.+\\.(j|t)sx?$": "ts-jest"
		},
		"transformIgnorePatterns": [
			"node_modules/(?!variables/.*)"
		]
	}
}
